<nav class="navbar navbar-expand-md navbar-dark bg-dark mb-3">
  <div class="container">
    <%= link_to 'Recipe overview', recipes_path, class: 'navbar-brand mr-3' %>
  </div>
</nav>
<div class="container">
  <%- @recipes.each do |recipe| %>
    <div class="row mb-2">
      <div class="col-md-6 my-auto">
        <h2>
          <%= link_to recipe.title, { controller: 'recipes', action: 'show', id: recipe.id }, { class: "text-info" } %>
        </h2>
      </div>
      <div class="col-md-4">

        <%= image_tag recipe.image_url, class: 'img-fluid' %>
      </div>
    </div>
  <% end %>
</div>

